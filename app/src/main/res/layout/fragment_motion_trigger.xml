<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="12dp"
    tools:background="@color/white_ffffff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutStaticPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Static verify period"
            android:textColor="@color/black_333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etStaticPeriod"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_radius_stroke_white_bg"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:hint="1~65535"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="@color/black_333333"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s"
            android:textColor="@color/black_333333"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvStaticTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text=" *Static verify period: the parameter that determines when a stationary event occurs on the device"
        android:textColor="#ff561f"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/layoutStaticPeriod" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupStaticPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="layoutStaticPeriod,tvStaticTip" />

    <CheckBox
        android:id="@+id/cbLockAdv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:button="@null"
        android:drawableRight="@drawable/selector_cb_btn"
        android:text="Locked ADV function"
        android:textColor="@color/black_333333"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tvStaticTip" />

    <EditText
        android:id="@+id/etLockDuration"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_radius_stroke_white_bg"
        android:gravity="center_vertical"
        android:hint="1~65535"
        android:inputType="number"
        android:maxLength="5"
        android:paddingStart="5dp"
        android:textColor="@color/black_333333"
        android:textSize="15sp"
        app:layout_constraintRight_toLeftOf="@+id/tvUnit"
        app:layout_constraintTop_toBottomOf="@id/cbLockAdv" />

    <TextView
        android:id="@+id/tvLockAdv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locked ADV duration"
        android:textColor="@color/black_333333"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/etLockDuration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etLockDuration" />

    <TextView
        android:id="@+id/tvUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"
        android:textColor="@color/black_333333"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/etLockDuration"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etLockDuration" />

    <TextView
        android:id="@+id/tvTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.1"
        android:text="*Lock ADV duration: If the device quickly returns to a state that does not meet the trigger conditions after initially satisfying them, it may only broadcast for a short period. The lock broadcast duration feature ensures that, in such cases, the device broadcasts for the set lock broadcast duration. This feature's parameter must be set to a value less than the post-trigger broadcast duration."
        android:textColor="#ff561f"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/etLockDuration" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tvLockAdv,etLockDuration,tvUnit,tvTips" />
</androidx.constraintlayout.widget.ConstraintLayout>